---
import Header from "@/components/header.astro";
import Footer from "@/components/footer.astro";

import "@/styles/styles.css";

export interface Props {
  description: string;
  title: string;
}

const { description, title } = Astro.props;
---

<!DOCTYPE html>
<html class="scroll-smooth" lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width" name="viewport" />
    <link href="/images/logo.svg" rel="icon" type="image/svg+xml" />
    <link
      as="font"
      crossorigin
      href="/fonts/inter-latin.woff2"
      rel="preload"
      type="font/woff2"
    />
    <link
      as="font"
      crossorigin
      href="/fonts/inter-latin-ext.woff2"
      rel="preload"
      type="font/woff2"
    />
    <meta content={Astro.generator} name="generator" />
    <meta content={description} name="description" />
    <title>{title}</title>
  </head>
  <body
    class="bg-gray-800 font-sans text-white bg-pattern selection:bg-amber-500 selection:text-white"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>
